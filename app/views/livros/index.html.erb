<% if @livros.blank? %>
  <h3 class="text-center">Nenhum livro disponível.</h3>
<% else %>
  <h1 class="text-center">Últimos livros adicionados</h1>
  <br>
  <div class="books">
    <%= render @livros %>
  </div>
  <br>
  <%= paginate @livros, theme: 'twitter-bootstrap-4', remote: true %>
<% end %>
