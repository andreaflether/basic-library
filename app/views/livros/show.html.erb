<%= render 'menuprincipal' %>
<!-- <p id="notice"><%= notice %></p> -->

<% if notice %>
<div class="alert alert-success alert-dismissible fade show" role="alert" id="notice">
  <%= notice %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
  <span aria-hidden="true">&times;</span>
  </button>
</div>
<% end %>

<br>
<div class="container">
  <div class="card">
    <h2 class="card-header"><%= @livro.nome %></h2>
    <div class="card-body card-txt">
      <!-- <h5 class="card-title">Special title treatment</h5> -->
      <p class="card-text"><b>Nome do livro: </b><%= @livro.nome %></p>
      <p class="card-text"><b>Autor: </b><%= @livro.autor %></p>
      <p class="card-text"><b>Editora: </b><%= @livro.editora %></p>
      <p class="card-text"><b>Assunto: </b><%= @livro.assunto %></p>
      <p class="card-text"><b>Quantidade dispon√≠vel: </b><%= @livro.quantidade %></p>


      <%= link_to 'Cadastrar novo livro', new_livro_path, class: "btn btn-primary" %>
    </div>
  </div>
  <br>
  <%= link_to 'Editar', edit_livro_path(@livro), class:"txt-link" %> |
  <%= link_to 'Voltar', livros_path, class:"txt-link" %>
</div>
